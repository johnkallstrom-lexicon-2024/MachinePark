@page "/"
@page "/dashboard"

<PageTitle>Machine Park - Dashboard</PageTitle>
<MachineTable Data="Machines" />

@code {
    [Inject]
    public IMachineService MachineService { get; set; } = default!;

    public IEnumerable<MachineViewModel> Machines { get; set; } = [];

    protected override void OnInitialized()
    {
        Machines = MachineService.GetMachines();
    }
}