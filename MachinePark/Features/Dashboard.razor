@page "/"
@page "/dashboard"

<PageTitle>Machine Park - Dashboard</PageTitle>

<h3 class="mb-3">Dashboard</h3>
<div class="row">
    <div class="col-sm-4 col-xl-3">
        <DailyStatistics />
    </div>
    <div class="col-sm-8 col-xl-9">
        <TableOfMachines Model="Machines" />
    </div>
</div>

@code {
    [Inject]
    public IMachineService MachineService { get; set; } = default!;

    public IEnumerable<MachineViewModel> Machines { get; set; } = [];

    protected override void OnInitialized()
    {
        Machines = MachineService.GetMachines();
    }
}