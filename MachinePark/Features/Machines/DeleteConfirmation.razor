@page "/machines/delete/{id:guid}"
@rendermode InteractiveServer
@inject NavigationManager NavigationManager

<PageTitle>Machine Park - Delete Machine</PageTitle>

<div class="card shadow border-0">
    <div class="card-body">
        <h5>Delete Confirmation</h5>
        <p>Are you sure you want to delete this machine?</p>
        <button class="btn btn-primary">Delete</button>
        <button class="btn btn-danger" @onclick="@(() => NavigationManager.NavigateTo("/dashboard"))">Cancel</button>
    </div>
</div>

@code {
    [Parameter]
    public Guid Id { get; set; }
}